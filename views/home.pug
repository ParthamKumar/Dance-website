  section#introSection
    div Welcome to Dance Academy
    div Eat Sleep Dance Repeat

  section#missionsSection
    h2 Our Mission
    div.card
      h3 Dance Perfection
      div.card-box
        div.card-img
          img(src="/static/img/img1.png")
